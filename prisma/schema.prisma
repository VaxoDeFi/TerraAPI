// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_ADDON_URI")
}

model CoinAPI {
  id                Int     @default(autoincrement())
  idRank            String
  rank              Int
  symbol            String  @unique
  name              String?
  supply            String
  maxSupply         String?
  marketCapUsd      String
  volumeUsd24Hr     String?
  priceUsd          String?
  changePercent24Hr String?
  vwap24Hr          String?
  explorer          String?
  icon              String?
}

model Messari {
  id                      String  @id
  symbol                  String  @unique
  rank                    Int
  icon                    String?
  slug                    String
  name                    String
  contract_addresses      String?
  priceUsd                Float?
  priceBtc                Float?
  priceEth                Float?
  percentageChange1HrUsd  Float?
  percentageChange24HrUsd Float?
  currentMarketcap        Float?
  vol24HrUsd              Float?
  realVol24HrUsd          Float?
  athUsd                  Float?
  athTimestamp            Float?
  percentageDownFromAth   Float?
  category                String?
  sector                  String?
  nextHalvingDate         Float?
  genesisBlockDate        Float?
  tokenType               String?
  tokenUsage              String?
  consensusAlgorithm      String?
}

model CoinGeckoList {
  id        String
  symbol    String @unique
  name      String
  platforms String
}
